@{
    Layout = "_EditTemplateLayout.cshtml";
    Page.Title = "Edit Section";
    var db = Database.Open("omesEvals");
    var templateId = Request.QueryString["id"];
    var sectionId = Request.QueryString["secID"];
    var sectionRowQuery = "SELECT * FROM Section WHERE SectionID = @0";
    var sectionRow = db.QuerySingle(sectionRowQuery, sectionId);
}
<h3 class="formHeader">Edit Section</h3>
<form class="form itemForm" method="post" action="SaveSection?id=@templateId&secID=@sectionId">
    <div class="form-group">
        <label for="sectionName">Section Name:</label>
        <input type="text" name="sectionName" id="sectionName" class="form-control" value="@sectionRow.SectionText" />
    </div>

    <button type="submit" class="btn btn-default formBtns">Submit</button>
</form>