@{
    Layout = "_EmptyTemplateLayout.cshtml";
    Page.Title = "Choose Template";
    var db = Database.Open("omesEvals");
    var templateQuery = "SELECT * FROM Template";
}
<form class="form itemForm" method="post" action="ConfirmChosenTemplate">
    <div class="form-group">
        <label>Choose Template:</label>
        <select class="form-control" name="template">
            <option></option>
            @foreach (var row in db.Query(templateQuery))
            {
                <option value="@row.TemplateID">@row.TemplateName</option>
            }
        </select>
    </div>  
    <button type="submit" class="btn btn-default formBtns">Submit</button>
</form>